<section class="container-fluid my-4">
    <div class="row">
        <div id="formulario-registro-imagen" class="col-12 col-md-6">
            <img src="/public/uploads/agua.jpeg" alt="picture" class="rounded-circle mx-auto d-block">
        </div>
        <div id="formulario-registro" class="col-12 col-md-6 " style="background-color: green;">
            <div class="card">
                <div class="card-body">
                    <h2 class="fw-bold text-center py-2">Registro</h2>
                    <form action="/registro" method="POST" enctype="multipart/form-data" class="fw-light text-light">
                        <div class="form-group">
                            <label for="nombre">Nombre</label><br>
                            <input type="text" name="nombre" placeholder="Jimena Sanchez"
                                class="form-control w-50 m-auto" />
                        </div>
                        <div class="form-group pt-4">
                            <label for="nombre">Email</label><br>
                            <input type="text" name="email" placeholder="nombre@gmail.com"
                                class="form-control w-50 m-auto">
                        </div>
                        <div class="form-group pt-4">
                            <label for="nombre">Password</label><br>
                            <input type="password" name="password" placeholder="*********"
                                class="form-control w-50 m-auto">
                        </div>
                        <div class="form-group pt-4">
                            <label for="nombre">Repite password</label><br>
                            <input type="password" name="repita_password" placeholder="***********"
                                class="form-control w-50 m-auto">
                        </div>
                        <div class="form-group col-12 col-sm-12">
                            <p class="text-white pb-3">Sube tu foto de perfil</p><br>
                            <input type="file" name="foto" onchange="previewFile()"><br>
                        </div>
                        <button class="btn btn-info text-light fw-bold" type="submit">Registrar</button>
                    </form>
                    <p class="fw-light text-center text-light">Completa tu perfil</p>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>