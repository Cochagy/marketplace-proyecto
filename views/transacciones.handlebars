<div class="container-fluid">
  <section class="biombo">
    <h1 class="text-center pt-5" style="color: green;">Tu historial de transacciones</h1>
    {{> cardNotificacion }}
    {{!-- <h1 class="text-center mt-5" style="color: aliceblue;">Tienes una solicitud de compra</h1> --}}
    <div class="py-4">
      <hr class="w-100" />
  </section>
  <table class="table w-80 m-auto rounded" style="background: green; height: 60px">
    <thead>
      <tr>

        <th scope="col">Compra/venta</th>
        <th scope="col">Imagen</th>
        <th scope="col">Producto</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Quien Vendio</th>
      </tr>
    </thead>

    <tbody>
      {{#each transacciones}}
      <tr>

        <td>{{this.tipo_de_compra}}</td>
        <td>
          <div>
            <img class="rounded-circle" src="/uploads/{{this.nombrep}}.jpg"
              onerror="this.onerror=null;this.parentNode.innerHTML='<a href=\'https://www.google.com/search?q={{this.nombrep}} {{this.marca}}&source=lnms&tbm=isch\' target=\'_blank\'>Intenta verlo por ac√°</a>';"
              height="55" width="75">


          </div>
        </td>

        <td>{{this.nombrep}}</td>
        <td>$ {{this.precio}}</td>
        <td>{{this.cantidad}}</td>
        <td>{{this.usuario}}</td>

      </tr>

      {{/each}}

    </tbody>
  </table>
  <br>
</div>
</div>