<div class="container-fluid">  
  <div class="biombo pb-5 px-5">
    <div class="row">
      <h1 class="text-center mt-5">Producto seleccionado</h1>     
        <div class="container responsivo col-6 mt-5 py-5 text-center rounded-start" style="background: aliceblue;">
          {{> cardVendedores }}
        </div>
        <div class="container responsivo col-6 mt-5 py-5 rounded-end" style="background: aliceblue;">
            <div class="mt-5">
                <h1>esika</h1>
                <h1>Crema hidratante</h1>
                <h1>Femenino</h1> 
                <h1>Pitanga eau de toilette 150ml.</h1>             
            </div><br>
            <h2>Ya casi es tuyo!!</h2>             
        </div>     
    </div>
  </div>

  <section>
    <h1 class="text-center mt-5" style="color: green;">Lista de vendedores</h1>
    <div class="py-4">  
      <hr class="w-100"/>

  <table class="table w-80 m-auto rounded" style="background: green; height: 60px">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Imagen</th>
        <th scope="col">Nombre</th>        
        <th scope="col">Precio producto</th>
        <th scope="col">Stock</th>
        <th scope="col">Comuna/sector</th>
        <th scope="col"></th>                     
      </tr>
    </thead>

   <tbody>            
        {{#each vendedores}}
        <tr>
          <td>
            <div>                
             <img class="rounded-circle" src="/uploads/{{this.nombre}}.jpg" height="55" width="75">

               
            </div>
          </td>
          <td>{{this.nombre}}</td>
          <td>{{this.nombrep}}</td>
          <td>$ {{this.precio}}</td>
          <td>{{this.cantidad}}</td>
          <td>{{this.nombre_sector}}</td>
          <td> <input class="btn btn-primary m-auto" type="button" value="Contactar" onClick="seleccionar()"></td>
        </tr>  
        {{/each}}    
      </tbody>



  </table>
  <div class="text-center mt-3">   
    <input class="btn btn-primary m-auto" type="button" value="Enviar" onClick="enviar()">

      <script> 
        function seleccionar() {
          window.alert("Revisa los datos de tu solicitud y confirma con enviar");
        }       
        function enviar() {
          window.alert("Tu solicitud de compra fue enviada");
        }
      </script>    
  </div>
    
</div>

